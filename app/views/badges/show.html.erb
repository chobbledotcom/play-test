<header>
  <h1><%= t("badges.titles.show", id: @badge_batch.id) %></h1>
</header>

<nav>
  <%= link_to t("badges.buttons.back"), badge_batches_path %>
</nav>

<article>
  <p>
    <strong><%= t("badges.fields.created_at") %>:</strong>
    <%= l(@badge_batch.created_at, format: :long) %>
  </p>

  <p>
    <strong><%= t("badges.fields.note") %>:</strong>
    <%= @badge_batch.note %>
  </p>

  <p>
    <strong><%= t("badges.fields.badge_count") %>:</strong>
    <%= @badge_batch.badge_count %>
  </p>
</article>

<% if @badges.any? %>
  <table>
    <thead>
      <tr>
        <th><%= t("badges.fields.badge_id") %></th>
        <th><%= t("badges.fields.note") %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @badges.each do |badge| %>
        <tr>
          <td><%= badge.id %></td>
          <td><%= badge.note %></td>
          <td><%= link_to t("badges.buttons.edit"), edit_badge_path(badge) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p><%= t("badges.messages.no_badges") %></p>
<% end %>
