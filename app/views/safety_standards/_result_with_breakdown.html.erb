<div class="calculation-result">
  <h2><%= t('safety_standards.calculators.result_title') %></h2>
  
  <% if local_assigns[:result_label] %>
    <p><strong><%= result_label %>:</strong> <%= result.value %><%= result.value_suffix %></p>
  <% end %>
  
  <ul>
    <% result.breakdown.each do |step| %>
      <li><strong><%= step[0] %>:</strong> <%= step[1] %></li>
    <% end %>
  </ul>
</div>