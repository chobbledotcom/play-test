<%
  metadata = @calculation_metadata[type]
  i18n_base = "forms.safety_standards_#{type}"
  result_id = "#{type.to_s.dasherize}-result"
%>

<div class="calculator-form">
  <%= render 'chobble_forms/form_context',
    model: nil,
    scope: :calculation,
    url: safety_standards_path,
    method: :post,
    local: false,
    i18n_base: i18n_base do |form| %>

    <%= form.hidden_field :type, value: type.to_s %>

    <p><%= metadata[:description] %></p>

    <% case type %>
    <% when :anchors %>
      <%= render 'chobble_forms/fieldset', legend_key: 'unit_dimensions' do %>
        <%= render 'chobble_forms/number', field: :length, min: 1.0, required: true %>
        <%= render 'chobble_forms/number', field: :width, min: 1.0, required: true %>
        <%= render 'chobble_forms/number', field: :height, min: 1.0, required: true %>
      <% end %>

    <% when :slide_runout %>
      <%= render 'chobble_forms/fieldset', legend_key: 'input' do %>
        <%= render 'chobble_forms/number', field: :platform_height, min: 1.0, required: true %>
        <%= render 'chobble_forms/checkbox', field: :has_stop_wall %>
      <% end %>

    <% when :wall_height %>
      <%= render 'chobble_forms/fieldset', legend_key: 'input' do %>
        <%= render 'chobble_forms/number', field: :platform_height, min: 0.0, required: true %>
        <%= render 'chobble_forms/number', field: :user_height, min: 0.0, required: true %>
      <% end %>

    <% when :user_capacity %>
      <%= render 'chobble_forms/fieldset', legend_key: 'dimensions' do %>
        <%= render 'chobble_forms/number', field: :length, min: 1.0, required: true %>
        <%= render 'chobble_forms/number', field: :width, min: 1.0, required: true %>
        <%= render 'chobble_forms/number', field: :negative_adjustment_area, min: 0.0, required: false %>
      <% end %>

      <%= render 'chobble_forms/fieldset', legend_key: 'user_height' do %>
        <%= render 'chobble_forms/number', field: :max_user_height, min: 0.0, required: false %>
      <% end %>
    <% end %>

    <% result_partial_mapping = {
      anchors: "anchor_result",
      slide_runout: "runout_result",
      wall_height: "wall_height_result",
      user_capacity: "user_capacity_result"
    } %>

    <div id="<%= result_id %>">
      <%= render result_partial_mapping[type] %>
    </div>
  <% end %>
</div>

<details class="formula-box">
  <summary><strong>Calculation Formula</strong></summary>
  <div>
    <code><%= metadata[:formula_text] %></code>
    <%# Example generation not available in gem %>
  </div>
</details>

<details class="source-code-box">
  <summary><strong>Ruby Source Code</strong></summary>
  <div class="source-code">
    <h4>Method: <%= metadata[:method_name] %></h4>
    <pre><code class="language-ruby"><%=
      additional_methods = metadata[:additional_methods] || []
      EN14960::SourceCode.get_method_source(
        metadata[:method_name],
        metadata[:module_name],
        additional_methods
      )
                                     %></code></pre>
    <%
      # Convert module name to file path for GitHub link
      file_path = metadata[:module_name].name.underscore.gsub('en14960/', '')
      github_url = "https://github.com/chobbledotcom/en14960/blob/main/lib/en14960/#{file_path}.rb"
    %>
    <p><em>Source: <%= link_to metadata[:module_name].name, github_url, target: "_blank", rel: "noopener" %> (en14960 gem)</em></p>
  </div>
</details>

<details class="api-details-box">
  <summary><strong>API Details</strong></summary>
  <div class="api-details">
    <h4>Endpoint:</h4>
    <code>POST <%= safety_standards_url %></code>

    <h4>Headers:</h4>
    <pre>Content-Type: application/json
Accept: application/json</pre>

    <h4>Parameters:</h4>
    <pre><code class="language-json"><%= render 'api_params', type: type %></code></pre>

    <h4>Example Response:</h4>
    <pre><code class="language-json"><%= render 'api_response', type: type %></code></pre>

    <h4>Test with curl:</h4>
    <pre class="curl-command"><code class="language-bash"><%= render 'curl_command', type: type, url: safety_standards_url %></code></pre>
  </div>
</details>
