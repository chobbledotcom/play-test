    <h5><%= t('safety_standards_tabs.material.fabric_requirements.title') %></h5>
    <ul>
      <li><%= t('safety_standards_tabs.material.fabric_requirements.tensile_strength') %></li>
      <li><%= t('safety_standards_tabs.material.fabric_requirements.tear_strength') %></li>
      <li><%= t('safety_standards_tabs.material.fabric_requirements.fire_retardancy') %></li>
    </ul>
  </div>

  <div class="safety-card">
    <h5><%= t('safety_standards_tabs.material.thread_requirements.title') %></h5>
