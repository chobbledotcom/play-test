      <li><%= t('safety_standards_tabs.material.rope_requirements.swing_limitation') %></li>
    </ul>
  </div>

  <div class="safety-card">
    <h5><%= t('safety_standards_tabs.material.netting_requirements.title') %></h5>
    <ul>
      <li><%= t('safety_standards_tabs.material.netting_requirements.vertical_mesh') %></li>
      <li><%= t('safety_standards_tabs.material.netting_requirements.roof_mesh') %></li>
      <li><%= t('safety_standards_tabs.material.netting_requirements.strength') %></li>
    </ul>
