<!-- Unit Details Display -->
<div class="unit-details-display">
  <% if unit.photo.attached? %>
    <%= render 'shared/image',
      image: unit.photo,
      size: :default,
      alt: "Photo of #{unit.name}" %>
  <% end %>

  <p><strong><%= ChobbleApp::FieldUtils.form_field_label('units', 'name') %>:</strong> <%= link_to unit.name, edit_unit_path(unit) %></p>
  <p><strong><%= ChobbleApp::FieldUtils.form_field_label('units', 'serial') %>:</strong> <%= unit.serial %></p>
  <p><strong><%= ChobbleApp::FieldUtils.form_field_label('units', 'manufacturer') %>:</strong> <%= unit.manufacturer %></p>

  <% if unit.operator.present? %>
    <p><strong><%= ChobbleApp::FieldUtils.form_field_label('units', 'operator') %>:</strong> <%= unit.operator %></p>
  <% end %>

  <% if unit.description.present? %>
    <p><strong><%= ChobbleApp::FieldUtils.form_field_label('units', 'description') %>:</strong> <%= unit.description %></p>
  <% end %>

  <% if current_user.admin? || Rails.env.test? %>
    <p><strong><%= ChobbleApp::FieldUtils.form_field_label('units', 'unit_type') %>:</strong> <%= t("units.unit_types.#{unit.unit_type}") %></p>
  <% end %>
</div>
