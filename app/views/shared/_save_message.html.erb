<!-- Save Message Display -->
<%
  # Handle the message and type parameters
  message_text = local_assigns[:message]
  message_type = local_assigns[:type] || (local_assigns[:errors].present? ? "error" : "success")
%>

<% if message_type == "error" %>
  <div class="error" id="<%= local_assigns[:dom_id] || 'form_save_message' %>">
    <%= message_text || t('shared.messages.save_failed') %>
  </div>
<% else %>
  <div class="success" id="<%= local_assigns[:dom_id] || 'form_save_message' %>">
    <%= message_text || t('shared.messages.saved_successfully') %>
    <% if local_assigns[:next_tab] && local_assigns[:inspection] %>
      <br>
      <!-- DEBUG: next_tab=<%= local_assigns[:next_tab].inspect %>, skip_incomplete=<%= local_assigns[:skip_incomplete].inspect %>, incomplete_count=<%= local_assigns[:incomplete_count].inspect %>, all_locals=<%= local_assigns.keys.inspect %> -->
      <%
        tab_name = t("forms.#{local_assigns[:next_tab]}.header")
        link_key = local_assigns[:skip_incomplete] ? 'continue_to_tab_with_incomplete' : 'continue_to_tab'
        link_params = { tab_name: tab_name }
        link_params[:count] = local_assigns[:incomplete_count] if local_assigns[:skip_incomplete]
      %>
      <%= link_to t("inspections.buttons.#{link_key}", **link_params),
            edit_inspection_path(local_assigns[:inspection], 
                                 tab: local_assigns[:next_tab]) + "#tabs" %>
    <% end %>
  </div>
<% end %>
